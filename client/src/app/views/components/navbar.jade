.ui.large.purple.inverted.menu(ng-controller='NavbarCtrl')
  .header.item
    i.trophy.icon
    span
      a(href='#/') Draft Planner
  .right.menu
    .item(ng-show='!user.id')
      a.ui.button(href='#/sign_in') Sign in
    .item(ng-show='!user.id')
      a.ui.teal.button(href='#/sign_up') Sign up
    .ui.dropdown.item(ng-show='user.id')
      | My Rankings
      i.dropdown.icon
      .menu
        a.item(ng-repeat='collection in collections' ng-href='#/collections/{{collection.id}}/') {{ collection.name }}
        .divider
        a.item(href='#/collections/new')
          i.plus.icon
          | Create new set
    .item(ng-show='user.id')
      a.ui.teal.button(ng-click='signOut()') Sign out
